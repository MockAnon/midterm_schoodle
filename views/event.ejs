<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Events</title>

<!--        header partial            -->
    <% include ./partials/_header %>
  </head>

<!-- welcome message -->

  <body>
    <div class="table-responsive text-center">
      <h1><%= events[0].title %></h1>
      <h2>by <%= events[0].host%></h2>
      <h2><%= events[0].location%></h2>
    </div>

    <h1 class="table-responsive text-center"> Times </h1>

<!-- table -->
<section class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
   <% for(var _timeSlot in times) { %>
      <th scope="col"><%= "  " + times[_timeSlot].start_time + " - " + times[_timeSlot].end_time + "  " %></th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% if (attendees) { %>
      <% for(var _attendee in attendees) {%>
      <tr>
        <th scope="row"><%= attendees[_attendee].name %></th>
        <% for(let i = 0; i < times.length; i++){%>
          <% if(attendees[_attendee].times_available.includes(times[i].id)) { %>
          <td> Yes </td>
          <% } else {%>
          <td> NO </td>
          <% } %>
        <% } %>
      </tr>
      <% } %>
    <% } %>
    <form id='submit_name' action='/event/:hash' method='post'>
    <input type='hidden' name='event_id' value='<%= events[0].id %>'>
    <tr>
      <td>
        <input class="form-control" name='name' id="attendees-name-id" type="text" type='username' placeholder='Your name'/>
      </td>
      <% for(let i = 0; i < times.length; i++){%>
      <td>
        <input type='checkbox' class='form-check-input' id='exampleCheck1' name='timeSlot' value='<%= times[i].id %>'>
      </td>
      <% } %>
      <td>
      <button> Submit </button>
      </td>
    </tr>
          </form>

  </tbody>
</table>
</section>

  <!--       footer partial          -->
<footer>
  <% include ./partials/_footer %>
</footer>

</html>
