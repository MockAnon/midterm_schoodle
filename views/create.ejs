<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create Events</title>




<!--        header partial            -->
    <% include ./partials/_header %>
  </head>






<!-- welcome message -->

  <body>


<!--                    Event Title           -->
  <form id="form_id" class = "container">
    <div class="form-group">
      <label for="event_title">Event Name:</label>
      <input type="text" id="event_title" class="form-control col-md-8" placeholder="Input event name...">
    </div>
    <!--                    Event Host           -->
    <div class="form-group">
      <label for="event_host">Event Host:</label>
      <input type="text" id="event_host" class="form-control form-control-sm col-md-8" placeholder="Who is the events Host...">
    </div>

    <!--          location        -->
    <label for="event_location">Event Location:</label>
    <div id= "event_location" class="form-row">
      <div class="col-7">
        <input id="event_city" type="text" class="form-control form-control-sm" placeholder="City">
      </div>
      <div class="col">
        <input type="text" class="form-control form-control-sm" placeholder="State/Province">
      </div>
      <div class="col">
        <input type="text" class="form-control form-control-sm" placeholder="Zip">
      </div>
    </div>

    <div class="form-group">
      <label for="event_note">Add Note:</label>
      <textarea class="form-control form-control-sm" id="event_note" rows="3" placeholder="Input notes in regards to the event..."></textarea>
    </div>

  <!--    Select Time    -->
  <!-- please move the jquery later -->
  <script type="text/javascript">
    var dateControl = document.querySelector('input[type="date"]');
    dateControl.value = '2017-06-01';
  </script>
  <!-- please move the jquery later -->
    <label for="times-date">Input Date:</label>
    <input id="times-date" type="date" value="2017-06-01">

    <form>  

      <div class = "time-div-select">
        <label for="times-end">Start Time:</label>
        <input id="times-start" type="time" name="appt-time"
               min="00:00" max="24:00" required
               pattern="[0-9]{2}:[0-9]{2}">
        <span class="validity"></span>
      </div>

      <div class = "time-div-select">
        <label for="times-end">End Time:</label>
        <input id="times-end" type="time" name="appt-time"
               min="00:00" max="24:00" required
               pattern="[0-9]{2}:[0-9]{2}">
        <span class="validity"></span>
        <input id = "submit-times-button" for="times-end" type="submit" value="Insert Time">

      </div>
    </form>

  <!--                    Adding buttons           -->
      <!-- <button id="submit-scoodle-button" type="submit" class="btn btn-primary">Scoodle!</button> -->
      <button class="float-right" id = "submit-scoodle-button" type="submit"> Scoodle!</button>
    </form>

  </body>



