<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <title>Create Events</title>
  </head>

  <body>
    <!-- Top Nav Bar -->
    <% include ./partials/_header %>

    <!-- Main -->
    <form class = "container" id="create" action="/create" method="POST">
      <input type="text" id="event_title" name="title" class="form-control col-md-8" placeholder="What is your event's name?" style="margin: 10px 0px;">
      <input type="text" id="event_host" name="host"class="form-control form-control-sm col-md-8" placeholder="Who's Hosting?" style="margin: 10px 0px;">
      <input type="text" id="event_location" name="location"class="form-control form-control-sm" placeholder="Where is it?" style="margin: 10px 0px;">
      <textarea class="form-control form-control-sm" id="event_description" name="description"rows="3" placeholder="Event Description" style="margin: 10px 0px;"></textarea>
      <section class="times" style="margin: 10px 0px;">
        <div>Date: </div>
        <input id="times-date" type="date" name="date" placeholder:"date">
        <div>
        <div style="margin-top: 10px;">Choose time options:</div>
        <input id="times-start" type="time" name="start" min="00:00" max="24:00" required pattern="[0-9]{2}:[0-9]{2}" placeholder="start : time">
        <input id="times-end" type="time" name="end" min="00:00" max="24:00" required pattern="[0-9]{2}:[0-9]{2}" placeholder="end : time">
        </div>
      </section>
      <button id="add_time" type="button">Add Time</button>
      <button id="submit" type="submit"> Submit </button>
    </form>
  </body>
  <footer>
    <% include ./partials/_footer %>
  </footer>
</html>
